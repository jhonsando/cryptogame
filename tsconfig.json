{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports" : true,
    "baseUrl": "./src/",
    "esModuleInterop" : true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "containers": ["./containers/*"],
      "graphql" : ["./graphql/*"],
      "hooks": ["./hooks/*"],
      "pages": ["./pages/*"]
    },
    "target": "es5",
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "files": ["custom.d.ts"]
}